---
import Header from "../components/Header.astro";
import { SEO } from "astro-seo";
import i18next, { t } from "i18next";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={i18next.language}>
  <head>
    <SEO
      title="Federico Robledo Portfolio"
      description="Portfolio belonging to Federico Robledo, a fullstack developer"
    />
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image"
      href="https://i.ibb.co/K6NFHkC/Black-logo-no-background.png"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900">
    <Header />
    <main>
      <slot />
    </main>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js"
    ></script>

    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Outfit:wght@700&display=swap");
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      html {
        font-family: "Outfit", sans-serif;
        background: black;
        background-size: 224px;
        color: white;
      }
      body {
        width: 100%;
      }
      code {
        font-family: "Outfit", sans-serif;
      }
    </style>
  </body>
</html>
