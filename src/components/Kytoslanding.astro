---
import i18next, { t } from "i18next";
---

<div class="gap-2 drop-shadow-[0px_35px_35px_rgba(39,245,131,0.6)]">
  <div
    class="flex md:w-[50%] h-full flex-col rounded-xl bg-slate-900 bg-clip-border text-white shadow-lg mx-auto"
  >
    <div
      class="relative mx-4 mt-4 overflow-hidden text-white shadow-lg rounded-xl bg-blue-gray-500 bg-clip-border shadow-blue-gray-500/40"
    >
      <img src="../../assets/kytoslanding.png" alt="kytos" />
      <div
        class="absolute inset-0 w-full h-full to-bg-black-10 bg-gradient-to-tr from-transparent via-transparent to-black/60"
      >
      </div>
    </div>
    <div class="p-6">
      <div class="flex items-center justify-between mb-3">
        <h5
          class="block font-sans text-xl antialiased font-medium leading-snug tracking-normal text-blue-gray-900 mx-auto"
        >
          Centro de rehabilitacion Kytos
        </h5>
      </div>
      <p
        class="block font-sans text-base antialiased font-light leading-relaxed text-white"
      >
        {t("project.kytos-landing")}
      </p>
      <div class="inline-flex flex-wrap items-center gap-3 mt-8 group">
        <span class="cursor-pointer rounded-full bg-transparent">
          <svg
            width="32px"
            height="32px"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier">
              <path
                d="M12 5.5C5.27148 5.5 0 8.35547 0 12C0 15.6445 5.27148 18.5 12 18.5C18.7285 18.5 24 15.6445 24 12C24 8.35547 18.7285 5.5 12 5.5ZM10.7539 7.5H12.0645L11.6484 9.5H12.8184C13.5605 9.5 14.0586 9.60352 14.3418 9.86328C14.6191 10.1191 14.7031 10.5391 14.5918 11.1113L14.0723 13.5H12.7402L13.2188 11.291C13.2773 10.9883 13.2539 10.7773 13.1523 10.666C13.0508 10.5547 12.8281 10.5 12.4941 10.5H11.4453L10.8125 13.5H9.5L10.7539 7.5ZM5 9.5H7.66602C8.9375 9.5 9.70703 10.3516 9.40625 11.623C9.05664 13.0996 8.11914 13.5 6.39648 13.5H5.57227L5.31055 15H3.98633L5 9.5ZM15.5 9.5H18.166C19.4375 9.5 20.207 10.3516 19.9062 11.623C19.5566 13.0996 18.6191 13.5 16.8965 13.5H16.0723L15.8105 15H14.4863L15.5 9.5ZM6.13477 10.5L5.75781 12.5H6.61328C7.35352 12.5 8.04102 12.416 8.15625 11.3125C8.19922 10.8848 8.02148 10.5 7.16602 10.5H6.13477ZM16.6348 10.5L16.2578 12.5H17.1133C17.8535 12.5 18.541 12.416 18.6562 11.3125C18.6992 10.8848 18.5215 10.5 17.666 10.5H16.6348Z"
                fill="#22c55e"></path>
            </g></svg
          >
        </span>

        <svg
          width="32px"
          height="32px"
          fill="#22c55e"
          viewBox="0 0 32 32"
          xmlns="http://www.w3.org/2000/svg"
          ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
            ><path
              d="M6.32 5.5l1.759 19.774 7.893 2.226 7.948-2.226L25.68 5.5H6.32zm15.537 6.449H12.59l.207 2.488h8.854l-.687 7.479-4.937 1.361v.014h-.055l-4.978-1.375-.303-3.821h2.406l.179 1.925 2.695.728 2.708-.728.303-3.136h-8.415l-.645-7.341h12.155l-.22 2.406z"
            ></path></g
          ></svg
        >
      </div>
    </div>
    <div class="p-6 pt-3 flex justify-around">
      <a href="https://github.com/FeDev13/kyots-landing-page"
        ><button
          aria-label="Link al repositorio"
          class="block w-full select-none bg-transparent"
          type="button"
        >
          <img
            src="/assets/merge.png"
            alt="coding"
            class="mx-auto hover:bg-slate-800 p-4 rounded-xl"
          />
        </button></a
      >
      <a href="https://kytos.000webhostapp.com/"
        ><button
          aria-label="Link al sitio web"
          class="block w-full select-none bg-transparent"
          type="button"
        >
          <img
            src="/assets/domain.png"
            alt="domain"
            class="mx-auto hover:bg-slate-800 p-4 rounded-xl"
          />
        </button></a
      >
    </div>
  </div>
</div>
